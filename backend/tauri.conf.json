{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm frontend:dev",
    "beforeBuildCommand": "pnpm frontend:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Rai Pal",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": false,
        "open": "^((steam?://\\w+)|(https?://\\w+)).+",
        "scope": [],
        "sidecar": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "msi",
      "identifier": "com.raicuparta.pal",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/*"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Rai Pal",
        "width": 800,
        "height": 600,
        "minHeight": 300,
        "minWidth": 600
      }
    ]
  }
}
